<!DOCTYPE html>
<html>
<head>
  <title>Painel Administrativo - Checkin Room</title>
  <meta charset="UTF-8">
</head>
<body>
  <h1>Painel Administrativo</h1>

  <table border="1">
    <thead>
      <tr>
        <th>Usuário</th>
        <th>Ocupação</th>
        <th>Sala</th>
        <th>Data</th>
        <th>Horário</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% reservas.forEach(reserva => { %>
        <tr>
          <td><%= reserva.nm_usuario %></td>
          <td><%= reserva.ocupacao_usuario %></td>
          <td><%= reserva.nm_sala %></td>
          <td><%= reserva.data_reserva.toISOString().split('T')[0] %></td>
          <td><%= reserva.id_horario %></td>
          <td>
            <form action="/reservas/aprovar/<%= reserva.id_reserva %>" method="POST" style="display:inline;">
              <button type="submit">Aprovar</button>
            </form>
            <form action="/reservas/rejeitar/<%= reserva.id_reserva %>" method="POST" style="display:inline;">
              <button type="submit">Rejeitar</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <p><a href="/perfil">Ir para Perfil</a></p>
</body>
</html>
