<!DOCTYPE html>
<html>
<head>
  <title>Minhas Notificações - Checkin Room</title>
  <meta charset="UTF-8">
</head>
<body>
  <h1>Minhas Notificações</h1>

  <% if (notificacoes.length === 0) { %>
    <p>Você não possui notificações.</p>
  <% } else { %>
    <ul>
      <% notificacoes.forEach(n => { %>
        <li class="<%= n.visualizada_notificacao ? 'lida' : 'nova' %>">
            <%= n.mensagem_notificacao %> — <%= new Date(n.data_notificacao).toLocaleString('pt-BR') %>

            <% if (!n.visualizada_notificacao) { %>
                <form action="/notificacoes/<%= n.id_notificacao %>" method="POST" style="display:inline;">
                <button type="submit">Marcar como lida</button>
                </form>
            <% } %>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <p><a href="/reserva">Voltar para reservas</a></p>
</body>
</html>
